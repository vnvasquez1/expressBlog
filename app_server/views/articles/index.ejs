<h1>Articles</h1>
<a href="/articles/new">New Article</a>
<table>
  <tr>
    <th>title</th>
    <th>text</th>
    <th colspan="3"></th>
  </tr>
  <% blogs.forEach(function(blog){ %>
    <tr>
      <td><a href="/articles/<%= blog._id %>"><%= blog.title %></a></td>
      <td><%= blog.text %> </td>
      <td>
         <form action="/articles/<%=blog._id%>/edit" method="GET">
           <input type="submit" value="EDIT"/> 
         </form>
      </td>
      <td>
         <form action="/articles/<%=blog._id%>?_method=DELETE" method="POST">
           <input type="submit" value="DELETE"/> 
         </form>
      </td>
    </tr>
  <%});%>
</table>
